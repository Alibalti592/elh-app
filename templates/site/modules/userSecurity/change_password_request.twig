{% extends "site/layout/layout.html.twig" %}

{% block title %}
    Ré-initialisation de votre mot de passe.
{% endblock %}

 {% block noindex %}
     <meta name="robots" content="noindex">
 {% endblock %}

{% block body_class %}layout-dark layout-bg-img{% endblock %}

{% block content %}
    <div id="user-page" class="container">
        <div class="wrapper-page-login card-box" id="register-card">
            <h1 class="mb-4 text-center">Changer votre mot de passe</h1>
            {% if app.user %}
                <div class="mb-3">
                    Vous êtes déjà connecté en tant que : {{ app.user.username }}, <a href="{{ path('app_logout') }}">Logout</a>
                </div>
            {% endif %}
            <form action="{{ path('app_forgotten_password') }}" method="POST" class="form-horizontal m-t-20 row">

                <div class="col-md-12">
                    <div class="form-group">
                        <div class="group-with-icon">
                            <label class="col-form-label required" for="user_registration_email">Email de votre compte</label>
                            <div class="input-group">
                                <span class="input-group-addon"><i class="mdi mdi-email"></i></span>
                                <input type="email" name="email" id="inputEmail" class="form-control" required autofocus>
                            </div>
                        </div>
                    </div>
                </div>

                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                <div class="col-12 text-center">
                    <button class="bb-btn" type="submit">
                        Envoyer la demande
                    </button>
                </div>
            </form>

        </div>
    </div>
{% endblock %}

{% block all_js %}

{% endblock %}
