{% extends "site/layout/layout.html.twig" %}

{% block content_header %}

{% endblock %}

{% block body_class %}layout-dark layout-bg-img{% endblock %}

{% block content %}
<div id="user-page" class="container">
    <div class="wrapper-page-login card-box card" id="register-card">
        <h1 class="mb-4 text-center">Réinitialiser votre mot de passe</h1>

        <form action="{{ path('app_reset_password', {"token" : token}) }}" method="POST" class="user_resetting_reset form-horizontal m-t-20 row">
            <div class="col-md-12">
                <div class="form-group">
                    <div class="group-with-icon">
                        <label class="col-form-label required" for="inputPassword">Nouveau mot de passe</label>
                        <div class="input-group">
                            <span class="input-group-addon"><i class="mdi mdi-lock"></i></span>
                            <input type="password" name="password" id="inputPassword" class="form-control" required autofocus>
                        </div>
                    </div>
                </div>


                <input type="hidden" name="token" value="{{ token }}">
            </div>

            <div class="col-md-12 text-center">
                <button type="submit" class="bb-btn waves-effect waves-light">
                    Redéfinir mon mot de passe
                </button>
            </div>
        </form>
    </div>
</div>
{% endblock content %}