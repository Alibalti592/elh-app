{% extends 'admin/layout/layout.html.twig' %}
{% block header_title %}
    Avis / critiques utilisateurs
{% endblock %}

{% block content %}
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-body">
                    {% if dbError %}
                        <div class="alert alert-warning mb-3" role="alert">
                            {{ dbError }}
                        </div>
                    {% endif %}
                    {% if feedbacks is empty %}
                        <p class="text-muted mb-0">Aucun commentaire pour le moment.</p>
                    {% else %}
                        <div class="table-responsive">
                            <table class="table table-striped table-hover mb-0">
                                <thead>
                                <tr>
                                    <th style="width: 24%;">Utilisateur</th>
                                    <th style="width: 22%;">Email</th>
                                    <th>Commentaire</th>
                                    <th style="width: 16%;">Date</th>
                                </tr>
                                </thead>
                                <tbody>
                                {% for feedback in feedbacks %}
                                    <tr>
                                        <td>
                                            {{ feedback.user ? feedback.user.fullname : 'Utilisateur supprim√©' }}
                                        </td>
                                        <td>
                                            {{ feedback.user ? feedback.user.email : '-' }}
                                        </td>
                                        <td>{{ feedback.comment|e|nl2br }}</td>
                                        <td>{{ feedback.createdAt ? feedback.createdAt|date('d/m/Y H:i') : '-' }}</td>
                                    </tr>
                                {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block part_js %}

{% endblock %}
