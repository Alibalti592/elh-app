{% extends 'admin/layout/layout.html.twig' %}
{% block header_title %}
    Versions mobiles
{% endblock %}

{% block content %}
    <div class="row">
        <div class="col-lg-7">
            <div class="card">
                <div class="card-body">
                    {% if dbError %}
                        <div class="alert alert-warning mb-3" role="alert">
                            {{ dbError }}
                        </div>
                    {% endif %}

                    <form method="post" action="{{ path('admin_app_versions_save') }}">
                        <div class="form-group mb-3">
                            <label for="ios-version">Version iOS</label>
                            <input
                                id="ios-version"
                                class="form-control"
                                type="text"
                                name="ios_version"
                                value="{{ versions.ios }}"
                                placeholder="Ex: 1.1.3"
                                required
                            >
                        </div>

                        <div class="form-group mb-3">
                            <label for="android-version">Version Android</label>
                            <input
                                id="android-version"
                                class="form-control"
                                type="text"
                                name="android_version"
                                value="{{ versions.android }}"
                                placeholder="Ex: 1.1.3"
                                required
                            >
                        </div>

                        <button class="btn btn-primary" type="submit">Enregistrer</button>
                    </form>
                </div>
            </div>
        </div>
        <div class="col-lg-5">
            <div class="card">
                <div class="card-body">
                    <p class="mb-2"><strong>Endpoint mobile:</strong></p>
                    <p class="text-muted mb-3">GET <code>/elh-api/app-version?platform=ios|android</code></p>
                    <p class="text-muted mb-0">
                        Si la version installée est différente de celle configurée ici, l’application affiche le modal de mise à jour.
                    </p>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

